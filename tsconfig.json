{
  "compilerOptions": {
    "target": "es2015",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "baseUrl": ".",
    "jsx": "react",
    "lib": ["dom", "es2016", "dom.iterable", "scripthost", "es2017.object"],
    "downlevelIteration": true
  },
  "include": ["src", "styleguide"]
}
