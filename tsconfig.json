{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "target": "ES5",
    "module": "commonjs",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "types": ["types"]
    },
    "lib": ["dom", "es6", "es2016", "dom.iterable", "scripthost"],
    "allowJs": true
  },
  "include": ["packages/"],
  "exclude": ["node_modules"]
}
