{
  "name": "contiamo-ui-showcase",
  "version": "0.0.1-23",
  "description": "A showcase of the various components available in the Contiamo UI framework",
  "main": "index.js",
  "repository": "git@github.com:Contiamo/ui-components.git",
  "author": "Tejas Kumar <tejas@contiamo.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "webpack-dev-server --hot --public --host 0.0.0.0",
    "build": "NODE_ENV=production webpack",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "tslint './index.tsx' --fix && tslint './src/**/*.{ts,tsx}' --fix",
    "package": "echo 'Not a public package, hence no package script :).'",
    "prettier": "prettier './index.tsx' --write && prettier './src/**/*.{ts,tsx}' --write",
    "precommit": "npm run test && npm run lint && npm run prettier && npm run package && git add .",
    "preversion": "npm run precommit",
    "version": "npm run build && git add -A dist"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.43",
    "@types/jest": "^20.0.8",
    "@types/react": "^16.0.9",
    "@types/react-dom": "^16.0.0",
    "@types/react-hot-loader": "^3.0.4",
    "@types/react-syntax-highlighter": "^0.0.3",
    "@types/webpack-env": "^1.13.1",
    "awesome-typescript-loader": "^3.2.3",
    "copy-webpack-plugin": "^4.0.1",
    "enzyme": "^2.9.1",
    "enzyme-to-json": "^1.5.1",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "jest-enzyme": "^3.8.1",
    "jest-glamor-react": "^3.1.0",
    "jest-serializer-enzyme": "^1.0.0",
    "moment": "^2.19.0",
    "prettier": "^1.7.0",
    "raw-loader": "^0.5.1",
    "react-test-renderer": "^16.0.0",
    "ts-jest": "^21.0.0",
    "tslint": "^5.7.0",
    "tslint-config-airbnb": "^5.2.1",
    "tslint-config-prettier": "^1.5.0",
    "typescript": "latest",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.7.1",
    "webpack-merge": "^4.1.0"
  },
  "dependencies": {
    "@types/d3-ease": "^1.0.7",
    "component-playground": "^3.0.0",
    "contiamo-ui-components": "^0.0.1-23",
    "contiamo-ui-utils": "^0.0.1-21",
    "contiamo-visualizations": "^0.0.1-23",
    "glamor": "^2.20.40",
    "glamorous": "^4.6.0",
    "jest-cli": "^20.0.4",
    "prop-types": "^15.5.10",
    "react": "^16.0.0",
    "react-color": "^2.13.8",
    "react-dom": "^16.0.0",
    "react-feather": "^1.0.7",
    "react-hot-loader": "next",
    "react-icons": "^2.2.5",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.0",
    "react-syntax-highlighter": "^5.7.0",
    "regenerator-runtime": "^0.11.0"
  },
  "jest": {
    "setupFiles": [
      "./test-polyfills.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "\\.(ts|tsx)$": "../../node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js|jsx)$",
    "setupTestFrameworkScriptFile": "../../node_modules/jest-enzyme/lib/index.js",
    "moduleNameMapper": {
      "\\.(css|jpg|png)$": "<rootDir>/empty-module.js"
    },
    "snapshotSerializers": [
      "../../node_modules/jest-serializer-enzyme"
    ],
    "unmockedModulePathPatterns": [
      "react",
      "enzyme",
      "jest-enzyme"
    ],
    "mapCoverage": true
  }
}
