{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "target": "ES5",
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": true,
    "jsx": "react",
    "lib": ["dom", "es2016", "dom.iterable", "scripthost", "es2017.object"],
    "moduleResolution": "node"
  },
  "include": ["types/**/*", "src/index.ts"],
  "exclude": ["node_modules", "lib"]
}