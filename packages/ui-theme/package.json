{
  "name": "contiamo-ui-theme",
  "version": "0.0.1-37",
  "description": "Customization theme for contiamo ui packages.",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "repository": "git@github.com:Contiamo/ui-components.git",
  "author": "Peter Szerzo <peter@contiamo.com>",
  "license": "MIT",
  "scripts": {
    "package": "rm -rf lib && tsc -d",
    "package:watch": "tsc -d -w",
    "lint": "tslint './src/**/*.{ts,tsx}' --fix",
    "prettier": "prettier './src/**/*.{ts,tsx}' --write",
    "precommit": "npm run test && npm run lint && npm run prettier && npm run package && git add .",
    "preversion": "npm run precommit",
    "version": "npm run package"
  },
  "devDependencies": {
    "@types/react": "^16.0.22",
    "prettier": "^1.7.0",
    "tslint": "^5.7.0",
    "tslint-config-airbnb": "^5.3.0",
    "tslint-config-prettier": "^1.5.0",
    "typescript": "2.5.3"
  }
}
