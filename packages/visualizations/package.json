{
  "name": "contiamo-visualizations",
  "version": "0.0.1-30",
  "description": "Contiamo visualization library.",
  "main": "./lib/index.js",
  "repository": "git@github.com:Contiamo/ui-components.git",
  "author": "Imogen Mason <imogen@contiamo.com>",
  "license": "MIT",
  "scripts": {
    "package": "rm -rf lib && tsc",
    "package:watch": "rm -rf lib && tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:diff": "jest --onlyChanged",
    "lint": "tslint './index.ts' --fix && tslint './src/**/*.{ts,tsx}' --fix",
    "lint:diff": "cd ../.. && tslint $(git diff --cached --name-only | grep '\\(js\\|jsx\\|tsx\\|ts\\)$') --fix",
    "prettier": "prettier './index.ts' --write && prettier './src/**/*.{ts,tsx}' --write",
    "prettier:diff": "cd ../.. && prettier $(git diff --cached --name-only | grep '\\(js\\|jsx\\|tsx\\|ts\\)$') --write",
    "precommit": "npm run test:diff && npm run lint:diff && npm run prettier:diff && git add .",
    "preversion": "npm run precommit",
    "version": "npm run package && git add ."
  },
  "dependencies": {
    "d3": "^4.10.2",
    "glamorous": "^4.8.0",
    "jquery": "^3.2.1",
    "lodash": "^4.17.4",
    "react": "^16.0.0"
  },
  "devDependencies": {
    "@types/d3-ease": "^1.0.7",
    "@types/d3-scale": "^1.0.10",
    "@types/d3-selection": "^1.1.0",
    "@types/d3-shape": "^1.2.1",
    "@types/d3-transition": "^1.1.0",
    "@types/jquery": "^3.2.12",
    "@types/lodash": "^4.14.74",
    "@types/react": "^16.0.9",
    "awesome-typescript-loader": "^3.2.3",
    "jest": "^21.2.1",
    "prettier": "^1.7.0",
    "react-test-renderer": "^16.0.0",
    "tslint": "^5.7.0",
    "tslint-config-airbnb": "^5.2.1",
    "tslint-config-prettier": "^1.5.0",
    "typescript": "^2.5.2"
  },
  "jest": {
    "setupFiles": [
      "./test-polyfills.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "../../node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$",
    "setupTestFrameworkScriptFile": "../../node_modules/jest-enzyme/lib/index.js",
    "moduleNameMapper": {
      "\\.(css|jpg|png)$": "<rootDir>/empty-module.js"
    },
    "snapshotSerializers": [
      "../../node_modules/jest-serializer-enzyme"
    ],
    "unmockedModulePathPatterns": [
      "react",
      "enzyme",
      "jest-enzyme"
    ],
    "mapCoverage": true
  }
}
