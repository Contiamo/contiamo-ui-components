{
  "name": "@operational/utils",
  "version": "0.2.2",
  "description": "A collection of utilities used within the Contiamo UI suite",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "repository": "git@github.com:Contiamo/operational-ui.git",
  "author": "Tejas Kumar <tejas@contiamo.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "precommit": "lint-staged",
    "package": "rimraf lib && tsc",
    "package:watch": "rimraf lib && tsc -w",
    "prettier": "prettier \"./src/**/*.{ts,tsx}\" --write",
    "test": "jest",
    "test:u": "jest -u",
    "lint": "tslint \"./src/**/*.{ts,tsx}\" --fix"
  },
  "dependencies": {
    "@operational/theme": "^0.2.2",
    "glamor": "^2.20.40",
    "tinycolor2": "^1.4.1"
  },
  "jest": {
    "setupFiles": [
      "./test-polyfills.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js|jsx)$",
    "mapCoverage": true
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "prettier": "^1.13.4"
  }
}
