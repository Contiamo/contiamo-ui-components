{
  "name": "contiamo-ui",
  "version": "1.0.0",
  "description": "An all-encompassing framework of UI components, composed components, and a showcase of components that compose together to create Contiamo products.",
  "repository": "git@github.com:Contiamo/ui-components.git",
  "private": true,
  "author": "Tejas Kumar <tejas@contiamo.com>",
  "license": "MIT",
  "scripts": {
    "build": "cd packages/showcase && npm run build",
    "setup": "npm install --registry=https://npm.contiamo.com/ && lerna bootstrap",
    "clean": "rm -rf node_modules && rm -rf packages/*/node_modules",
    "test": "lerna run jest",
    "lint": "lerna run lint",
    "lint:verify": "lerna run lint:verify",
    "prettier": "lerna run prettier",
    "prettier:verify": "lerna run prettier:verify",
    "precommit": "npm run prettier",
    "ci": "npm run test && npm run prettier:verify && lerna run lint"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lerna": "^2.1.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
