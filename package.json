{
  "name": "operational-ui",
  "version": "0.1.0",
  "description": "Building blocks for effective operational user interfaces",
  "repository": "git@github.com:Contiamo/operational-ui.git",
  "private": true,
  "author": "Tejas Kumar <tejas@contiamo.com>",
  "license": "MIT",
  "scripts": {
    "start": "cd packages/website && npm run start",
    "prebuild": "npm run package",
    "build": "run-s build:*",
    "build:clean": "rimraf dist",
    "build:website": "cd packages/website && npm run build && cp -r dist ../..",
    "build:visual-test":
      "cd packages/visual-tests && npm run build && cp -r dist ../../dist/visual-tests",
    "build:components":
      "cd packages/components && npm run docs:build && cp -r styleguide ../../dist/docs",
    "clean": "lerna clean",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "prettier": "lerna run prettier",
    "precommit": "lint-staged",
    "postinstall": "lerna bootstrap --stream",
    "package": "lerna run package",
    "prepublish": "npm run package",
    "publish": "lerna publish",
    "next": "./scripts/next.sh",
    "ensure:clean:repo": "./scripts/ensure-clean-repo.sh",
    "verify": "run-s lint prettier test",
    "ci": "./scripts/ci.sh",
    "deploy:website": "./scripts/deploy-website.sh"
  },
  "lint-staged": {
    "*.(ts|tsx|js|jsx|json)": ["prettier --write", "git add"]
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lerna": "^2.11.0",
    "lint-staged": "^7.1.3",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2"
  },
  "workspaces": ["packages/*"]
}
