{
  "name": "operational-ui",
  "version": "0.1.0",
  "description": "Building blocks for effective operational user interfaces",
  "repository": "git@github.com:Contiamo/operational-ui.git",
  "private": true,
  "author": "Tejas Kumar <tejas@contiamo.com>",
  "license": "MIT",
  "scripts": {
    "start": "lerna run --scope @operational/components start",
    "prebuild": "lerna run package",
    "build": "run-s build:*",
    "build:clean": "rimraf dist",
    "build:website": "lerna run --scope @operational/website build && cp -r packages/website/dist .",
    "build:visual-test": "lerna run --scope @operational/visual-tests build && cp -r pacakges/visual-tests/dist/ ./dist/visual-tests",
    "build:components": "lerna run --scope @operational/components build && cp -r packages/components/styleguide ./dist/doc",
    "clean": "lerna clean --parallel",
    "test": "lerna run test --parallel",
    "lint": "tslint",
    "prettify": "prettier ./packages/**/*.{json,js,jsx,ts,tsx} --write",
    "precommit": "lint-staged",
    "preversion": "lerna run package",
    "publish": "lerna publish",
    "next": "./scripts/next.sh",
    "verify": "run-s lint prettier test",
    "ci": "npm run verify",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "lint-staged": {
    "*.(ts|tsx|js|jsx|json|html)": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "gh-pages": "^1.2.0",
    "husky": "^0.14.3",
    "lerna": "^2.11.0",
    "lint-staged": "^7.1.3",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "tslint": "^5.10.0",
    "typescript": "next",
    "@types/core-js": "0.9.43",
    "@types/jest": "20.0.8",
    "@types/node": "8.0.27",
    "@types/enzyme": "^3.1.5",
    "@types/lodash": "^4.14.108",
    "@types/marked": "^0.3.0",
    "@types/react": "latest",
    "@types/react-dom": "latest",
    "@types/d3-ease": "1.0.7",
    "@types/d3-scale": "1.0.10",
    "@types/d3-selection": "1.1.0",
    "@types/d3-shape": "1.2.1",
    "@types/d3-transition": "1.1.0",
    "@types/d3-array": "^1.2.1",
    "@types/d3-ease": "^1.0.7",
    "@types/d3-hierarchy": "^1.1.0",
    "@types/d3-interpolate": "^1.1.6",
    "@types/d3-scale": "^1.0.10",
    "@types/d3-selection": "^1.3.0",
    "@types/d3-shape": "^1.2.1",
    "@types/d3-time-format": "^2.1.0",
    "@types/d3-transition": "^1.1.0",
    "@types/jest": "^20.0.8",
    "@types/jquery": "^3.2.12",
    "@types/moment-range": "^3.1.0",
    "@types/react-color": "^2.13.0",
    "@types/react-hot-loader": "^3.0.4",
    "@types/react-icons": "^2.2.2",
    "@types/react-router-dom": "^4.2.0",
    "@types/react-syntax-highlighter": "^0.0.3",
    "@types/tinycolor2": "^1.4.0",
    "@types/webpack-env": "^1.13.1",
    "@types/tinycolor2": "1.4.0",
    "enzyme": "2.9.1",
    "enzyme-to-json": "1.5.1",
    "jest": "21.2.1",
    "parcel-bundler": "^1.8.1",
    "jest-enzyme": "3.8.1",
    "jest-glamor-react": "3.1.0",
    "jest-serializer-enzyme": "1.0.0",
    "react-test-renderer": "16.0.0",
    "tslint-config-airbnb": "5.8.0",
    "tslint-config-prettier": "1.12.0",
    "ts-jest": "21.0.0"
  },
  "workspaces": [
    "packages/*"
  ]
}
