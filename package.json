{
  "name": "contiamo-ui",
  "version": "1.0.0",
  "description":
    "An all-encompassing framework of UI components, composed components, and a showcase of components that compose together to create Contiamo products.",
  "repository": "git@github.com:Contiamo/ui-components.git",
  "private": true,
  "author": "Tejas Kumar <tejas@contiamo.com>",
  "license": "MIT",
  "scripts": {
    "preinstall": "node ./scripts/preinstall",
    "bootstrap": "lerna bootstrap",
    "postbootstrap": "node ./scripts/postbootstrap",
    "postinstall": "node ./scripts/postinstall",
    "start": "cd packages/showcase && npm run start",
    "package": "lerna run package",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "precommit": "npm run lint && npm run test"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "chalk": "^2.1.0",
    "enzyme": "^2.9.1",
    "husky": "^0.14.3",
    "lerna": "^2.1.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
