{
  "name": "operational-ui",
  "version": "0.1.0",
  "description": "Building blocks for effective operational user interfaces",
  "repository": "git@github.com:Contiamo/operational-ui.git",
  "private": true,
  "author": "Tejas Kumar <tejas@contiamo.com>",
  "license": "MIT",
  "scripts": {
    "start": "cd packages/website && yarn start",
    "build": "cd packages/website && npm run build",
    "bootstrap": "lerna bootstrap",
    "postinstall": "npm run bootstrap",
    "clean": "rm -rf node_modules && rm -rf packages/*/node_modules",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "prettier": "lerna run prettier",
    "precommit": "npm run ci:local && git add .",
    "package": "lerna run package",
    "publish": "lerna publish",
    "next": "lerna publish --canary=next --npm-tag=next --yes",
    "ensure:clean:repo": "./scripts/ensure-clean-repo.sh",
    "ci:local": "lerna run package && lerna run test && lerna run lint && lerna run prettier",
    "ci": "npm run ci:local && npm run ensure:clean:repo",
    "deploy:website": "./scripts/deploy-website.sh"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lerna": "^2.7.1"
  },
  "workspaces": [
    "packages/*"
  ]
}
